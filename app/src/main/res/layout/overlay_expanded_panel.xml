<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlay_expanded_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/expanded_panel"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/bg_expanded_panel"
        android:elevation="8dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/expanded_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“‹ Clipboard History"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50" />

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_close_btn"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#e74c3c"
                android:contentDescription="Close" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0" />

        <!-- Clipboard Items List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_clipboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:padding="8dp" />
    </LinearLayout>
</FrameLayout>
